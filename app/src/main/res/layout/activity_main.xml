<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="16dp"
    android:paddingLeft="64dp"
    android:paddingRight="64dp"
    android:paddingTop="16dp"
    tools:context="com.android.swapnil.yu_hack_application.MainActivity"
    android:background="@drawable/bg8">




    <Button
        android:id="@+id/play_game"
        android:background="@drawable/button_custom"
        android:text="Play Game"
        android:onClick="callPlayGames"
        android:textColor="@android:color/black"
        tools:layout_editor_absoluteX="30dp"
        tools:layout_editor_absoluteY="120dp"
        android:layout_width="268dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/choose_charities"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="67dp" />

    <Button
        android:id="@+id/choose_charities"
         android:background="@drawable/button_custom"
        android:text="Choose Charities"
        android:onClick="callChooCharityActivity"
        android:layout_width="268dp"
        android:layout_height="wrap_content"
        android:textColor="@android:color/black"
        tools:layout_editor_absoluteX="30dp"
        tools:layout_editor_absoluteY="200dp"
        android:layout_marginBottom="55dp"
        android:layout_above="@+id/about"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:id="@+id/about"

        android:background="@drawable/button_custom"
        android:text="About"
        android:onClick="callAboutActivity"
        android:textColor="@android:color/black"
        tools:layout_editor_absoluteX="30dp"
        tools:layout_editor_absoluteY="280dp"
        android:layout_width="268dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="95dp" />


    <TextView
        android:id="@+id/textview"
        android:layout_width="268dp"
        android:layout_height="45dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="30dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:selectAllOnFocus="false"
        android:text="You Play, We Pay !!!"
        android:textColor="@android:color/holo_blue_light"
        android:textAlignment="center"
        android:textSize="24sp"
        tools:layout_editor_absoluteX="72dp"
        tools:layout_editor_absoluteY="31dp" />
<!--    </android.support.constraint.ConstraintLayout>-->
</RelativeLayout>
